
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper function to check if the user is the admin
    function isAdmin() {
      // IMPORTANT: Replace 'YOUR_ADMIN_UID_HERE' with the actual Admin User's UID from Firebase Authentication
      // You can find the UID in the Firebase Console under Authentication -> Users.
      let adminUid = "YOUR_ADMIN_UID_HERE";
      return request.auth != null && request.auth.uid == adminUid;
    }
  
    // Allow public read access to all collections
    match /{collection}/{docId} {
      allow read: if true;
    }

    // Allow write access only for the admin user
    match /contributors/{contributorId} {
      allow create, update, delete: if isAdmin();
    }
    
    match /expenses/{expenseId} {
      allow create, update, delete: if isAdmin();
    }

    match /programs/{programId} {
      allow create, update, delete: if isAdmin();
    }
  }
}
